<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ebMS_PU" >
        <mapping-file>shared/hbm/inbox-event.hbm.xml</mapping-file>
        <mapping-file>shared/hbm/inbox-mail.hbm.xml</mapping-file>
        <mapping-file>shared/hbm/inbox-payload.hbm.xml</mapping-file>
        <mapping-file>shared/hbm/outbox-event.hbm.xml</mapping-file>
        <mapping-file>shared/hbm/outbox-mail.hbm.xml</mapping-file>
        <mapping-file>shared/hbm/outbox-payload.hbm.xml</mapping-file>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:msh/db/msh-as4;create=true"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>            
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>            
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.connection.autocommit" value="false" /> 
           
        </properties>
    </persistence-unit>
</persistence>