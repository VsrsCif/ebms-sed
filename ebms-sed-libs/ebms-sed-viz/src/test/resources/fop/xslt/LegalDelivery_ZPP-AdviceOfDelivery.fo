<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:fo="http://www.w3.org/1999/XSL/Format"  xmlns:msh="http://jmsh.org/mshmail"  xmlns:java="http://xml.apache.org/xslt/java" exclude-result-prefixes="java jmsh" xmlns:jmsh="java:si.jrc.msh.utils.XSLTExtensions">
    <xsl:output method="xml" indent="yes"/>
    <xsl:template match="/">
        <fo:root font-family="Arial" font-size="12pt">
            <fo:layout-master-set>
                <fo:simple-page-master master-name="A4-portrait" page-height="29.7cm" page-width="21.0cm" margin="2cm">
                    <fo:region-body/>
                </fo:simple-page-master>
            </fo:layout-master-set>
            <fo:page-sequence master-reference="A4-portrait">
                <xsl:variable name="varFormatedSentDate">
                    <xsl:call-template name="formatDate">
                        <xsl:with-param name="date">
                            <xsl:value-of select="/msh:MSHMail/@sendDate"/>
                        </xsl:with-param>
                    </xsl:call-template>
                </xsl:variable>
                <fo:flow flow-name="xsl-region-body">
                    <fo:block font-size="18pt" font-weight="bold">VROČILNICA</fo:block>
                    <fo:block font-size="12pt" font-weight="bold" linefeed-treatment="preserve">					
                        Pošiljatelj</fo:block>
                    <fo:block font-size="12pt">
                        <xsl:value-of select="/msh:MSHMail/@senderName"/>
                    </fo:block>
                    <fo:block font-size="12pt">
                        <xsl:value-of select="/msh:MSHMail/@senderEBox"/>
                    </fo:block>
                    <fo:block font-size="12pt" font-weight="bold" linefeed-treatment="preserve">					
                        Naslovnik</fo:block>
                    <fo:block font-size="12pt">
                        <xsl:value-of select="/msh:MSHMail/@receiverName"/>
                    </fo:block>
                    <fo:block font-size="12pt">
                        <xsl:value-of select="/msh:MSHMail/@receiverEBox"/>
                    </fo:block>
                    <fo:block font-size="12pt" font-weight="bold" linefeed-treatment="preserve">
                        Potrjena vročilnica po ZPP				
                    </fo:block>
                    <fo:block font-size="12pt" linefeed-treatment="preserve">
                        Naslovnik potrjujem, da sem dne <xsl:call-template name="currentDate"/> sprejel pošiljko z oznako <xsl:value-of select="/msh:MSHMail/@conversationId"/>. 
					 
                        To sporočilo je potrdilo o vročitvi pošiljke in opravljeni storitvi.
                    </fo:block>
                    <!-- new line -->
                    <fo:block font-size="12pt" font-weight="bold">Naša oznaka</fo:block>
                    <fo:block font-size="12pt" linefeed-treatment="preserve">
                        <xsl:value-of select="/msh:MSHMail/@conversationId"/>

                    </fo:block>
                    <fo:block font-size="12pt"  linefeed-treatment="preserve">	
                        Datum opravljene storitve: <xsl:call-template name="currentDate"/>
                        Maribor,  <xsl:call-template name="currentDateTime"/>
                    </fo:block>
                </fo:flow>
            </fo:page-sequence>
        </fo:root>
    </xsl:template>
    <xsl:template name="formatDate">
        <xsl:param name="date"/>
        <xsl:value-of select="java:si.jrc.msh.utils.XSLTExtensions.formatDate($date)"/>
    </xsl:template>
    <xsl:template name="currentDateTime">
        <xsl:value-of select="java:si.jrc.msh.utils.XSLTExtensions.currentDateTime()"/>
    </xsl:template>
    <xsl:template name="currentDate">
        <xsl:value-of select="java:si.jrc.msh.utils.XSLTExtensions.currentDate()"/>
    </xsl:template>
</xsl:stylesheet>
